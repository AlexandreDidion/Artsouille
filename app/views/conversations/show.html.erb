<div>
  <h3> Conversation between <%= @conversation.author.username %> and <%= @conversation.receiver.username  %></h3>
  <div id="messages" data-conversation-id="<%= @conversation.id %>">
    <% @conversation.messages.each do |message| %>
      <p><%= message.user.username %> : <%= message.content %></p>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for @message do |f| %>
        <%= f.input :content  %>
        <%= f.input_field :conversation_id, as: :hidden, value: @conversation.id %>
        <%= f.input_field :receiver_id, as: :hidden, value: @conversation.receiver.id %>
        <%= f.button :submit, 'Send message', class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

