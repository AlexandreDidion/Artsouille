<div class="container">
  <div class="row">
    <div class="col-6 m-auto">
      <%= simple_form_for @exhibition do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :category %>
        <%= f.input :address %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :end_date, as: :date %>
        <%= f.button :submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
