<div class="<%= page_background_class %>">
  
  <div class="container-work-of-art-cards">
    <% @work_of_arts.each do |art| %>
      <div class="work-of-art-card">
        <% if art.photo.attached? %>
          <%= cl_image_tag art.photo.key, crop: :fill %>
        <% else %>
          <%= image_tag('dodoma.png') %>
        <% end %>
        <div class="work-of-art-card-infos">
          <h3><%= link_to art.name, user_work_of_art_path(art.user, art) %></h3>
          <p>by <u><%= art.user.first_name %> <%= art.user.last_name %></u></h3>
          <img src="/assets/heart-icon" alt="heart" class="favorite-icon">
        </div>
        <br>
        <br>
      </div>
    <% end %>
  </div>

</div>
