<div class="navbar-container">
  <hr class="navbar-hr">

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Artists", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Artworks", work_of_arts_path, class: "nav-link" %>
        <li class="nav-item active">
          <%= link_to "Collabs", collabs_path, class: "nav-link" %>
        </li>
      </ul>

      <div class="searchbar">
        <form action="">
          <input type="search" placeholder="Find an artist, artwork, exhibition...">
          <i class="fa fa-search"></i>
        </form>
      </div>

    </div>

    <div>
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag "account-logo.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My profile", user_path(current_user), class: "dropdown-item nav-link" %>
              <%= link_to "Messages", "#", class: "nav-link" %>
              <%= link_to "My Art", work_of_arts_path(query: 'my_arts'), class: "dropdown-item nav-link" %>
              <%= link_to "My Collabs", collabs_path(query: 'my_collabs'), class: "dropdown-item nav-link" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item nav-link" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr class="navbar-hr">
</div>
